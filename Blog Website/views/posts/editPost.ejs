<%- include("../partials/head") %>
<%- include("../partials/header") %>

<main class="py-5">
  <div class="container">
    <h3 class="text-center font-weight-bold text-uppercase mb-4"><i class="fas fa-pencil-alt"></i> Edit Blog Post</h3>
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card border-0 shadow-lg">
          <div class="card-header text-center">
            <h4 class="font-weight-bold">Post Details</h4>
          </div>
          <div class="card-body p-4">
            <form class="needs-validation" action="/blog/<%= post._id %>?_method=PATCH" method="post" novalidate>
              <div class="form-group">
                <label for="title" class="font-weight-bold">Post Title</label>
                <input type="text" class="form-control" name="title" id="title" value="<%= post.title %>" placeholder="Enter the title" required>
                <div class="invalid-feedback">Title is required.</div>
              </div>

              <div class="form-row">
                <div class="col-md-6 mb-3">
                  <label for="author" class="font-weight-bold">Author</label>
                  <input type="text" class="form-control" name="author" id="author" value="<%= post.author %>" placeholder="Author's name" required>
                  <div class="invalid-feedback">Please enter the author's name.</div>
                </div>

                <div class="col-md-6 mb-3">
                  <label for="img_url" class="font-weight-bold">Image URL</label>
                  <input type="url" class="form-control" name="img_url" id="img_url" value="<%= post.img_url %>" placeholder="Image URL" required>
                  <div class="invalid-feedback">Please provide a valid image URL.</div>
                </div>
              </div>

              <div class="form-group">
                <label for="postBody" class="font-weight-bold">Content</label>
                <textarea class="form-control" name="postBody" id="postBody" rows="6" placeholder="Write your content here..." required><%= post.postBody %></textarea>
                <div class="invalid-feedback">Content cannot be empty.</div>
              </div> 

              <div class="form-group">
                <label for="postSummary" class="font-weight-bold">Summary</label>
                <textarea class="form-control" name="postSummary" id="postSummary" rows="3" maxlength="150" placeholder="Summary (max 150 characters)" required><%= post.postSummary %></textarea>
                <div class="invalid-feedback">Summary is required.</div>
              </div>

              <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg">Save </button>
                <a href="/blog/<%= post._id %>" class="btn btn-secondary btn-lg">Cancel</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<script src="/js/form-validation.js"></script>

<%- include("../partials/footer") %>

<style>
  body {
    background-color: #f0f2f5;
  }

  main {
    padding: 50px 0;
  }

  h3 {
    margin-bottom: 20px;
  }

  .card {
    border-radius: 15px;
  }

  .card-header {
    background-color: #007bff;
    color: white;
    border-radius: 15px 15px 0 0;
  }

  .form-control {
    border-radius: 5px;
  }

  .btn {
    width: 45%;
    margin: 10px 5px;
  }

  .invalid-feedback {
    font-size: 0.9rem;
  }
</style>
