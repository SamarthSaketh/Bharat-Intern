<%- include("../partials/head") %>  
<%- include("../partials/header") %>  

<main class="py-5 bg-light">
  <div class="container">
    <div class="text-center mb-5">
      <h1 class="font-weight-bold text-uppercase">Blogs</h1>
      <p class="text-muted">Read the latest posts from our authors</p>
    </div>
    <div class="row">
      <% posts.forEach(post => { %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-0 shadow-sm rounded-lg">
          <div class="card-img-top position-relative overflow-hidden">
            <img class="w-100" src="<%= post.img_url %>" alt="<%= post.title %>" style="height: 250px; object-fit: cover;">
          </div>
          <div class="card-body d-flex flex-column">
            <h4 class="card-title mb-3">
              <a href="/blog/<%= post._id %>" class="text-dark font-weight-bold"><%= post.title %></a>
            </h4>
            <p class="small text-muted mb-2">
              <i class="far fa-user-circle"></i> <%= post.author %> | <%= post.postedOn %>
            </p>
            <p class="card-text text-secondary flex-grow-1"><%= post.postSummary %></p>
            <div class="d-flex justify-content-between align-items-center mt-auto">
              <a href="/blog/<%= post._id %>" class="btn btn-outline-primary btn-sm">Read More</a>
            <a href="/blog/<%= post._id %>/download?format=pdf" class="btn btn-outline-primary btn-sm">
              <i class="fas fa-download"></i> Save as PDF
            </a>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</main>

<%- include("../partials/footer") %>

